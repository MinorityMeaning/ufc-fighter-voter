{
  "name": "ufc-voting-widget",
  "version": "1.0.0",
  "description": "Real-time UFC voting widget for websites",
  "scripts": {
    "dev": "npm run dev:memory",
    "dev:memory": "concurrently \"npm run dev:memory-server\" \"npm run dev:client\"",
    "dev:memory-server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": ["ufc", "voting", "realtime", "websocket", "react"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 